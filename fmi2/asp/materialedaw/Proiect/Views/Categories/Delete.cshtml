@model markly.ViewModels.CategoryFormViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 text-white"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion</h4>
                </div>
                <div class="card-body p-4">
                    <p class="lead">Are you sure you want to delete the category <strong>@Model.Name</strong>?</p>
                    <p class="text-muted">This action cannot be undone. Bookmarks in this category will NOT be deleted, but they will no longer be associated with this category.</p>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
