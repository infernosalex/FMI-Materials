@model markly.ViewModels.CategoryFormViewModel

@{
    ViewData["Title"] = "Edit Category";
    ViewData["PublicText"] = "Visible to everyone on your profile";
    ViewData["PrivateText"] = "Visible only to you";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="icon-circle bg-primary bg-opacity-10 text-primary mb-3 mx-auto" style="width: 64px; height: 64px;">
                            <i class="bi bi-pencil-square fs-3"></i>
                        </div>
                        <h1 class="h3 fw-bold">Edit Category</h1>
                        <p class="text-muted">Update your category details.</p>
                    </div>
                    
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">
                                Category Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g. Design Inspiration" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                Description <span class="text-muted fw-normal">(Optional)</span>
                            </label>
                            <textarea asp-for="Description" class="form-control form-control-lg" rows="3" placeholder="What's this collection about?"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <partial name="_VisibilityToggle" model="Model.IsPublic" />
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg border-0">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}