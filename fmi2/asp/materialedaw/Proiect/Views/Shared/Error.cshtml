@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-page">
    <div class="error-page__content text-center">
        <img src="~/images/illustrations/error.svg" alt="" class="img-fluid mb-4" style="max-height: 250px;">

        <h1 class="h2 fw-bold mb-3">Something went wrong</h1>
        <p class="text-muted lead mb-4">
            An error occurred while processing your request. Please try again later.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted small mb-4">
                <strong>Request ID:</strong> <code style="color: var(--accent);">@Model.RequestId</code>
            </p>
        }

        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="bi bi-house me-2"></i>Go to Homepage
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div>
