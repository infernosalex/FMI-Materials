    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/qr-code-styling@1.9.2/lib/qr-code-styling.js"></script>
    <script src="~/js/config/api-endpoints.js" asp-append-version="true"></script>
    <script src="~/js/csrf-helper.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/masonry.js" asp-append-version="true"></script>
    <script>
        window.isAuthenticated = @((User.Identity?.IsAuthenticated ?? false).ToString().ToLower());
    </script>
    <script src="~/js/shared/toast.js" asp-append-version="true"></script>
    <script src="~/js/votes.js" asp-append-version="true"></script>
    <script src="~/js/bookmark-actions.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
