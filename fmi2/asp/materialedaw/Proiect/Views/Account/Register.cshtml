@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container py-5">
    <div class="row justify-content-center align-items-center g-5">
        <div class="col-lg-5 d-none d-lg-block">
            <img src="~/images/illustrations/register.svg" alt="" class="img-fluid" style="max-height: 450px;">
        </div>
        <div class="col-md-8 col-lg-5">
            <div class="text-center text-lg-start mb-4">
                <h2 class="fw-bold">Create your account</h2>
                <p class="text-muted">Start organizing your bookmarks today</p>
            </div>

            <div class="card shadow-sm fade-in">
                <div class="card-body p-4">
                    <form asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="John" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Doe" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="At least 8 characters" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="alert alert-info border-0 mb-4" style="background-color: var(--sand-100); color: var(--sand-700);">
                            <small>
                                <strong>Password requirements:</strong>
                                <ul class="mb-0 mt-1 ps-3">
                                    <li>At least 8 characters</li>
                                    <li>Upper and lowercase letters</li>
                                    <li>At least one digit</li>
                                </ul>
                            </small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Create Account
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted mb-2">Already have an account?</p>
                <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="text-decoration-none fw-semibold">
                    Sign in instead
                </a>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
