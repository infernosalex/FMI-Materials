@model markly.ViewModels.Admin.AdminCommentsViewModel
@{
    ViewData["Title"] = "Manage Comments";
    ViewData["AdminActivePage"] = "Comments";
}

<div class="admin-page">
    <div class="admin-header">
        <div class="container py-4">
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <span class="admin-badge">
                            <i class="bi bi-shield-check"></i> Admin
                        </span>
                    </div>
                    <h1 class="admin-title mb-1">Comments</h1>
                    <p class="admin-subtitle mb-0">@Model.TotalItems.ToString("N0") total comments</p>
                </div>
                @await Html.PartialAsync("_AdminNav")
            </div>
        </div>
    </div>

    <div class="container py-4">
        <!-- Search -->
        <div class="admin-toolbar mb-4">
            <form method="get" class="admin-search-form">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="search" class="form-control border-start-0"
                           placeholder="Search comments..." value="@Model.SearchQuery">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.SearchQuery))
            {
                <a href="@Url.Action("Comments", "Admin")" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg me-1"></i>Clear
                </a>
            }
        </div>

        <!-- Comments Table -->
        <div class="admin-panel">
            <div class="admin-panel-body p-0">
                @if (Model.Comments.Any())
                {
                    <div class="table-responsive">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th class="admin-table-th" style="width: 45%;">Comment</th>
                                    <th class="admin-table-th">Author</th>
                                    <th class="admin-table-th">On Bookmark</th>
                                    <th class="admin-table-th">Created</th>
                                    <th class="admin-table-th text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var comment in Model.Comments)
                                {
                                    <tr class="admin-table-row">
                                        <td class="admin-table-td">
                                            <p class="admin-comment-text mb-0">@(comment.Content.Length > 200 ? comment.Content.Substring(0, 200) + "..." : comment.Content)</p>
                                        </td>
                                        <td class="admin-table-td">
                                            <a href="@Url.Action("Index", "Profile", new { username = comment.AuthorUserName })"
                                               class="admin-table-author">
                                                @comment.AuthorName
                                            </a>
                                        </td>
                                        <td class="admin-table-td">
                                            <a href="@Url.Action("Details", "Bookmarks", new { id = comment.BookmarkId })"
                                               class="admin-table-link" target="_blank">
                                                @(comment.BookmarkTitle.Length > 40 ? comment.BookmarkTitle.Substring(0, 40) + "..." : comment.BookmarkTitle)
                                            </a>
                                        </td>
                                        <td class="admin-table-td">
                                            <span class="admin-table-date">@comment.CreatedAt.ToString("MMM dd, yyyy")</span>
                                            <span class="admin-table-time">@comment.CreatedAt.ToString("HH:mm")</span>
                                        </td>
                                        <td class="admin-table-td text-end">
                                            <div class="admin-actions">
                                                <a href="@Url.Action("Details", "Bookmarks", new { id = comment.BookmarkId })"
                                                   class="btn btn-sm btn-outline-primary" target="_blank"
                                                   title="View on Bookmark">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="confirmDeleteComment(@comment.Id, @Html.Raw(Json.Serialize(comment.AuthorName)))"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="admin-pagination">
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Comments", "Admin", new { page = Model.CurrentPage - 1, search = Model.SearchQuery })">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>
                                    }
                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Comments", "Admin", new { page = i, search = Model.SearchQuery })">@i</a>
                                        </li>
                                    }
                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Comments", "Admin", new { page = Model.CurrentPage + 1, search = Model.SearchQuery })">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                            <span class="admin-pagination-info">
                                Page @Model.CurrentPage of @Model.TotalPages
                            </span>
                        </div>
                    }
                }
                else
                {
                    <div class="admin-empty-state py-5">
                        <i class="bi bi-chat-left-text"></i>
                        <p>No comments found</p>
                        @if (!string.IsNullOrEmpty(Model.SearchQuery))
                        {
                            <a href="@Url.Action("Comments", "Admin")" class="btn btn-outline-primary btn-sm">
                                Clear search
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (hidden) -->
<form id="delete-comment-form" method="post" asp-action="DeleteComment" style="display: none;">
    <input type="hidden" name="id" id="delete-comment-id" />
</form>

@section Scripts {
    <script>
        function confirmDeleteComment(id, authorName) {
            showConfirmModal({
                title: 'Delete Comment',
                message: `Are you sure you want to delete this comment by ${authorName}?`,
                detail: 'This action cannot be undone.',
                confirmText: 'Delete',
                onConfirm: () => {
                    document.getElementById('delete-comment-id').value = id;
                    document.getElementById('delete-comment-form').submit();
                }
            });
        }
    </script>
}
