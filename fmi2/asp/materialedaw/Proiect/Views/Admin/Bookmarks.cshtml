@model markly.ViewModels.Admin.AdminBookmarksViewModel
@{
    ViewData["Title"] = "Manage Bookmarks";
    ViewData["AdminActivePage"] = "Bookmarks";
}

<div class="admin-page">
    <div class="admin-header">
        <div class="container py-4">
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <span class="admin-badge">
                            <i class="bi bi-shield-check"></i> Admin
                        </span>
                    </div>
                    <h1 class="admin-title mb-1">Bookmarks</h1>
                    <p class="admin-subtitle mb-0">@Model.TotalItems.ToString("N0") total bookmarks</p>
                </div>
                @await Html.PartialAsync("_AdminNav")
            </div>
        </div>
    </div>

    <div class="container py-4">
        <!-- Search -->
        <div class="admin-toolbar mb-4">
            <form method="get" class="admin-search-form">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="search" class="form-control border-start-0"
                           placeholder="Search bookmarks..." value="@Model.SearchQuery">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.SearchQuery))
            {
                <a href="@Url.Action("Bookmarks", "Admin")" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg me-1"></i>Clear
                </a>
            }
        </div>

        <!-- Bookmarks Table -->
        <div class="admin-panel">
            <div class="admin-panel-body p-0">
                @if (Model.Bookmarks.Any())
                {
                    <div class="table-responsive">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th class="admin-table-th" style="width: 40%;">Bookmark</th>
                                    <th class="admin-table-th">Author</th>
                                    <th class="admin-table-th text-center">Comments</th>
                                    <th class="admin-table-th text-center">Visibility</th>
                                    <th class="admin-table-th">Created</th>
                                    <th class="admin-table-th text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bookmark in Model.Bookmarks)
                                {
                                    <tr class="admin-table-row">
                                        <td class="admin-table-td">
                                            <a href="@Url.Action("Details", "Bookmarks", new { id = bookmark.Id })"
                                               class="admin-table-link" target="_blank">
                                                @bookmark.Title
                                            </a>
                                            @if (!string.IsNullOrEmpty(bookmark.Description))
                                            {
                                                <p class="admin-table-desc mb-0">@bookmark.Description</p>
                                            }
                                        </td>
                                        <td class="admin-table-td">
                                            <a href="@Url.Action("Index", "Profile", new { username = bookmark.AuthorUserName })"
                                               class="admin-table-author">
                                                @bookmark.AuthorName
                                            </a>
                                        </td>
                                        <td class="admin-table-td text-center">
                                            <span class="admin-count-badge">@bookmark.CommentCount</span>
                                        </td>
                                        <td class="admin-table-td text-center">
                                            @if (bookmark.IsPublic)
                                            {
                                                <span class="admin-badge-sm admin-badge-sm--success">
                                                    <i class="bi bi-globe2"></i> Public
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="admin-badge-sm admin-badge-sm--muted">
                                                    <i class="bi bi-lock-fill"></i> Private
                                                </span>
                                            }
                                        </td>
                                        <td class="admin-table-td">
                                            <span class="admin-table-date">@bookmark.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        </td>
                                        <td class="admin-table-td text-end">
                                            <div class="admin-actions">
                                                <a href="@Url.Action("Details", "Bookmarks", new { id = bookmark.Id })"
                                                   class="btn btn-sm btn-outline-primary" target="_blank"
                                                   title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="confirmDeleteBookmark(@bookmark.Id, @Html.Raw(Json.Serialize(bookmark.Title)))"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="admin-pagination">
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Bookmarks", "Admin", new { page = Model.CurrentPage - 1, search = Model.SearchQuery })">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>
                                    }
                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Bookmarks", "Admin", new { page = i, search = Model.SearchQuery })">@i</a>
                                        </li>
                                    }
                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Bookmarks", "Admin", new { page = Model.CurrentPage + 1, search = Model.SearchQuery })">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                            <span class="admin-pagination-info">
                                Page @Model.CurrentPage of @Model.TotalPages
                            </span>
                        </div>
                    }
                }
                else
                {
                    <div class="admin-empty-state py-5">
                        <i class="bi bi-bookmark"></i>
                        <p>No bookmarks found</p>
                        @if (!string.IsNullOrEmpty(Model.SearchQuery))
                        {
                            <a href="@Url.Action("Bookmarks", "Admin")" class="btn btn-outline-primary btn-sm">
                                Clear search
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (hidden) -->
<form id="delete-bookmark-form" method="post" asp-action="DeleteBookmark" style="display: none;">
    <input type="hidden" name="id" id="delete-bookmark-id" />
</form>

@section Scripts {
    <script>
        function confirmDeleteBookmark(id, title) {
            showConfirmModal({
                title: 'Delete Bookmark',
                message: `Are you sure you want to delete "${title}"?`,
                detail: 'This will also delete all associated comments. This action cannot be undone.',
                confirmText: 'Delete',
                onConfirm: () => {
                    document.getElementById('delete-bookmark-id').value = id;
                    document.getElementById('delete-bookmark-form').submit();
                }
            });
        }
    </script>
}
