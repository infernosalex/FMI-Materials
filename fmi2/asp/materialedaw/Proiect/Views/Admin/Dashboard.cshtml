@model markly.ViewModels.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["AdminActivePage"] = "Dashboard";
}

<div class="admin-page">
    <div class="admin-header">
        <div class="container py-4">
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <span class="admin-badge">
                            <i class="bi bi-shield-check"></i> Admin
                        </span>
                    </div>
                    <h1 class="admin-title mb-1">Dashboard</h1>
                    <p class="admin-subtitle mb-0">Monitor and manage your platform content</p>
                </div>
                @await Html.PartialAsync("_AdminNav")
            </div>
        </div>
    </div>

    <div class="container py-4">
        <!-- Stats Grid -->
        <div class="row g-4 mb-5">
            <div class="col-6 col-lg-3">
                <div class="admin-stat-card">
                    <div class="admin-stat-icon admin-stat-icon--purple">
                        <i class="bi bi-bookmark-fill"></i>
                    </div>
                    <div class="admin-stat-content">
                        <span class="admin-stat-value" data-count="@Model.TotalBookmarks">0</span>
                        <span class="admin-stat-label">Bookmarks</span>
                    </div>
                    <a href="@Url.Action("Bookmarks", "Admin")" class="stretched-link"></a>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="admin-stat-card">
                    <div class="admin-stat-icon admin-stat-icon--blue">
                        <i class="bi bi-chat-left-text-fill"></i>
                    </div>
                    <div class="admin-stat-content">
                        <span class="admin-stat-value" data-count="@Model.TotalComments">0</span>
                        <span class="admin-stat-label">Comments</span>
                    </div>
                    <a href="@Url.Action("Comments", "Admin")" class="stretched-link"></a>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="admin-stat-card">
                    <div class="admin-stat-icon admin-stat-icon--amber">
                        <i class="bi bi-folder-fill"></i>
                    </div>
                    <div class="admin-stat-content">
                        <span class="admin-stat-value" data-count="@Model.TotalCategories">0</span>
                        <span class="admin-stat-label">Categories</span>
                    </div>
                    <a href="@Url.Action("Categories", "Admin")" class="stretched-link"></a>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="admin-stat-card">
                    <div class="admin-stat-icon admin-stat-icon--emerald">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="admin-stat-content">
                        <span class="admin-stat-value" data-count="@Model.TotalUsers">0</span>
                        <span class="admin-stat-label">Users</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Content -->
        <div class="row g-4">
            <!-- Recent Bookmarks -->
            <div class="col-lg-6">
                <div class="admin-panel">
                    <div class="admin-panel-header">
                        <h2 class="admin-panel-title">
                            <i class="bi bi-bookmark me-2"></i>Recent Bookmarks
                        </h2>
                        <a href="@Url.Action("Bookmarks", "Admin")" class="admin-panel-action">
                            View All <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                    <div class="admin-panel-body p-0">
                        @if (Model.RecentBookmarks.Any())
                        {
                            <div class="admin-list">
                                @foreach (var bookmark in Model.RecentBookmarks)
                                {
                                    <div class="admin-list-item">
                                        <div class="admin-list-item-content">
                                            <a href="@Url.Action("Details", "Bookmarks", new { id = bookmark.Id })"
                                               class="admin-list-item-title" target="_blank">
                                                @bookmark.Title
                                            </a>
                                            <div class="admin-list-item-meta">
                                                <span>
                                                    by <a href="@Url.Action("Index", "Profile", new { username = bookmark.AuthorUserName })">@bookmark.AuthorName</a>
                                                </span>
                                                <span class="admin-list-item-dot"></span>
                                                <span>@bookmark.CreatedAt.ToString("MMM dd, HH:mm")</span>
                                                @if (!bookmark.IsPublic)
                                                {
                                                    <span class="admin-list-item-dot"></span>
                                                    <span class="admin-badge-sm admin-badge-sm--muted">
                                                        <i class="bi bi-lock-fill"></i> Private
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <a href="@Url.Action("Details", "Bookmarks", new { id = bookmark.Id })"
                                           class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="admin-empty-state">
                                <i class="bi bi-bookmark"></i>
                                <p>No bookmarks yet</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Recent Comments -->
            <div class="col-lg-6">
                <div class="admin-panel">
                    <div class="admin-panel-header">
                        <h2 class="admin-panel-title">
                            <i class="bi bi-chat-left-text me-2"></i>Recent Comments
                        </h2>
                        <a href="@Url.Action("Comments", "Admin")" class="admin-panel-action">
                            View All <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                    <div class="admin-panel-body p-0">
                        @if (Model.RecentComments.Any())
                        {
                            <div class="admin-list">
                                @foreach (var comment in Model.RecentComments)
                                {
                                    <div class="admin-list-item">
                                        <div class="admin-list-item-content">
                                            <p class="admin-list-item-text mb-1">@comment.Content</p>
                                            <div class="admin-list-item-meta">
                                                <span>
                                                    by <a href="@Url.Action("Index", "Profile", new { username = comment.AuthorUserName })">@comment.AuthorName</a>
                                                </span>
                                                <span class="admin-list-item-dot"></span>
                                                <span>
                                                    on <a href="@Url.Action("Details", "Bookmarks", new { id = comment.BookmarkId })" target="_blank">@comment.BookmarkTitle</a>
                                                </span>
                                            </div>
                                        </div>
                                        <a href="@Url.Action("Details", "Bookmarks", new { id = comment.BookmarkId })"
                                           class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="admin-empty-state">
                                <i class="bi bi-chat-left-text"></i>
                                <p>No comments yet</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
