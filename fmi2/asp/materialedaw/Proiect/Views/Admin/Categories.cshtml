@model markly.ViewModels.Admin.AdminCategoriesViewModel
@{
    ViewData["Title"] = "Manage Categories";
    ViewData["AdminActivePage"] = "Categories";
}

<div class="admin-page">
    <div class="admin-header">
        <div class="container py-4">
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <span class="admin-badge">
                            <i class="bi bi-shield-check"></i> Admin
                        </span>
                    </div>
                    <h1 class="admin-title mb-1">Categories</h1>
                    <p class="admin-subtitle mb-0">@Model.TotalItems.ToString("N0") total categories</p>
                </div>
                @await Html.PartialAsync("_AdminNav")
            </div>
        </div>
    </div>

    <div class="container py-4">
        <!-- Search -->
        <div class="admin-toolbar mb-4">
            <form method="get" class="admin-search-form">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="search" class="form-control border-start-0"
                           placeholder="Search categories..." value="@Model.SearchQuery">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.SearchQuery))
            {
                <a href="@Url.Action("Categories", "Admin")" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg me-1"></i>Clear
                </a>
            }
        </div>

        <!-- Categories Table -->
        <div class="admin-panel">
            <div class="admin-panel-body p-0">
                @if (Model.Categories.Any())
                {
                    <div class="table-responsive">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th class="admin-table-th" style="width: 30%;">Category</th>
                                    <th class="admin-table-th">Owner</th>
                                    <th class="admin-table-th text-center">Bookmarks</th>
                                    <th class="admin-table-th text-center">Visibility</th>
                                    <th class="admin-table-th">Created</th>
                                    <th class="admin-table-th text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.Categories)
                                {
                                    <tr class="admin-table-row">
                                        <td class="admin-table-td">
                                            <a href="@Url.Action("Details", "Categories", new { id = category.Id })"
                                               class="admin-table-link" target="_blank">
                                                @category.Name
                                            </a>
                                            @if (!string.IsNullOrEmpty(category.Description))
                                            {
                                                <p class="admin-table-desc mb-0">
                                                    @(category.Description.Length > 80 ? category.Description.Substring(0, 80) + "..." : category.Description)
                                                </p>
                                            }
                                        </td>
                                        <td class="admin-table-td">
                                            <a href="@Url.Action("Index", "Profile", new { username = category.OwnerUserName })"
                                               class="admin-table-author">
                                                @category.OwnerName
                                            </a>
                                        </td>
                                        <td class="admin-table-td text-center">
                                            <span class="admin-count-badge">@category.BookmarkCount</span>
                                        </td>
                                        <td class="admin-table-td text-center">
                                            @if (category.IsPublic)
                                            {
                                                <span class="admin-badge-sm admin-badge-sm--success">
                                                    <i class="bi bi-globe2"></i> Public
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="admin-badge-sm admin-badge-sm--muted">
                                                    <i class="bi bi-lock-fill"></i> Private
                                                </span>
                                            }
                                        </td>
                                        <td class="admin-table-td">
                                            <span class="admin-table-date">@category.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        </td>
                                        <td class="admin-table-td text-end">
                                            <div class="admin-actions">
                                                <a href="@Url.Action("Details", "Categories", new { id = category.Id })"
                                                   class="btn btn-sm btn-outline-primary" target="_blank"
                                                   title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="confirmDeleteCategory(@category.Id, @Html.Raw(Json.Serialize(category.Name)), @category.BookmarkCount)"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="admin-pagination">
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Categories", "Admin", new { page = Model.CurrentPage - 1, search = Model.SearchQuery })">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>
                                    }
                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Categories", "Admin", new { page = i, search = Model.SearchQuery })">@i</a>
                                        </li>
                                    }
                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Categories", "Admin", new { page = Model.CurrentPage + 1, search = Model.SearchQuery })">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                            <span class="admin-pagination-info">
                                Page @Model.CurrentPage of @Model.TotalPages
                            </span>
                        </div>
                    }
                }
                else
                {
                    <div class="admin-empty-state py-5">
                        <i class="bi bi-folder"></i>
                        <p>No categories found</p>
                        @if (!string.IsNullOrEmpty(Model.SearchQuery))
                        {
                            <a href="@Url.Action("Categories", "Admin")" class="btn btn-outline-primary btn-sm">
                                Clear search
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (hidden) -->
<form id="delete-category-form" method="post" asp-action="DeleteCategory" style="display: none;">
    <input type="hidden" name="id" id="delete-category-id" />
</form>

@section Scripts {
    <script>
        function confirmDeleteCategory(id, name, bookmarkCount) {
            let detail = 'This action cannot be undone.';
            if (bookmarkCount > 0) {
                detail = `This category contains ${bookmarkCount} bookmark${bookmarkCount > 1 ? 's' : ''}. The bookmarks will be unlinked from this category but not deleted. This action cannot be undone.`;
            }

            showConfirmModal({
                title: 'Delete Category',
                message: `Are you sure you want to delete "${name}"?`,
                detail: detail,
                confirmText: 'Delete',
                onConfirm: () => {
                    document.getElementById('delete-category-id').value = id;
                    document.getElementById('delete-category-form').submit();
                }
            });
        }
    </script>
}
