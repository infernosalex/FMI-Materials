@* Afisarea unui articol impreuna cu categoria din care face parte*@

<div class="d-flex justify-content-center">

    <a class="btn btn-outline-success" href="/Articles/Index/">Afisare articole</a>

    <a class="btn btn-outline-success" href="/Articles/New">Adauga articol</a>

</div>

<br />

<div class="card">

    <div class="card-body">

        <h3 class="card-title alert-success py-3 px-3 rounded-2">@ViewBag.Article.Title</h3>

        <div class="card-text">@ViewBag.Article.Content</div>

        <div class="d-flex justify-content-between flex-row mt-5">

            <div><i class="bi bi-globe"></i> @ViewBag.Category.CategoryName</div>

            <span class="alert-success">@ViewBag.Article.Date</span>

        </div>

    </div>

    <hr />

    <div class="d-flex flex-row justify-content-between">

        <a class="btn btn-success" href="/Articles/Edit/@ViewBag.Article.Id">Editeaza articol</a>

        <form method="post" action="/Articles/Delete/@ViewBag.Article.Id">

            <button class="btn btn-danger" type="submit">Sterge articol</button>

        </form>

    </div>

</div>

<br />
